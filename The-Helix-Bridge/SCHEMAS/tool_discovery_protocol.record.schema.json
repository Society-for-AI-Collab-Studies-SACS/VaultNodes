{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Helix Discovery Record",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "instance_id": {
      "type": "string"
    },
    "coordinate": {
      "type": "object",
      "required": [
        "theta",
        "z",
        "r"
      ],
      "properties": {
        "theta": {
          "type": "number"
        },
        "z": {
          "type": "number"
        },
        "r": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "signature": {
            "type": "string"
          },
          "constraints": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ],
        "additionalProperties": false
      }
    },
    "contact": {
      "type": "object",
      "properties": {
        "adapter": {
          "type": "string"
        },
        "address": {
          "type": "string"
        }
      },
      "required": [
        "adapter",
        "address"
      ],
      "additionalProperties": false
    },
    "ttl": {
      "type": "integer",
      "minimum": 5
    },
    "witness": {
      "type": "object",
      "properties": {
        "by": {
          "type": "string"
        },
        "note": {
          "type": "string"
        },
        "timestamp": {
          "type": "string"
        }
      },
      "required": [
        "by",
        "timestamp"
      ],
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "id",
    "instance_id",
    "coordinate",
    "capabilities",
    "contact",
    "ttl",
    "witness"
  ]
}